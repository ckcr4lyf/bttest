{
  "name": "lurb",
  "version": "0.1.0",
  "description": "Utility for testing BitTorrent setups",
  "main": "./bin/index.mjs",
  "type": "module",
  "scripts": {
    "build": "rm -rf build/ && tsc",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckcr4lyf/bttest.git"
  },
  "keywords": [
    "bittorrent"
  ],
  "author": "Raghu Saxena",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ckcr4lyf/bttest/issues"
  },
  "homepage": "https://github.com/ckcr4lyf/bttest#readme",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "ava": "^5.1.0",
    "typescript": "^5.2.2"
  },
  "ava": {
    "files": [
      "__tests__/**/*"
    ],
    "timeout": "1m",
    "typescript": {
      "rewritePaths": {
        "__tests__/": "build/__tests__/"
      },
      "compile": false
    }
  },
  "preferGlobal": true,
  "bin": {
    "lurb": "./bin/index.mjs"
  },
  "dependencies": {
    "@ckcr4lyf/logger": "^0.0.7",
    "@types/node": "^20.5.9",
    "bencode": "^4.0.0",
    "commander": "^11.0.0"
  }
}
